//Fibonacci series in C++
//Prints the Fibonacci series to a given number.

#include <iostream>
using namespace std;

int main()
{
    int a = 0, b = 1, c = 0, x;

    cout << "Enter a number: ";
    cin >> x;

     //prints the beginning of the series.
    cout << "Fibonacci Series: " << a << ", " << b << ", ";

    c = a + b;

    while(c <= x)
    {
        cout << c << ", ";
        a = b;
        b = c;
        c = a + b;
    }
    return 0;
}
